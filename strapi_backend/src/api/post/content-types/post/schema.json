{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortDescription": {
      "type": "customField",
      "options": {
        "preset": "toolbar",
        "maxLengthCharacters": 500
      },
      "customField": "plugin::ckeditor5.CKEditor",
      "required": true
    },
    "body": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "post_comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post-comment.post-comment",
      "mappedBy": "post"
    },
    "likePost": {
      "type": "integer",
      "min": 0
    }
  }
}
